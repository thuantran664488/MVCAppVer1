<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @RenderSection("css", required: false)
</head>
<body>
    <header>
        <div class="container header-content">
            <div class="header logo-and-category">
                <a class="logo" href=""><img src="~/Content/src/icon/tiki_logo_icon.png" alt="Tiki logo" /></a>
                <a class="category-dropdown" href="">
                    <img src="~/Content/src/icon/hamburger_menu_icon.png" alt="Alternate Text" />
                    <div>
                        <div class="category-and-product">
                            <div class="category-lable">Danh mục</div>
                            <div class="product-lable">Sảm Phẩm</div>
                        </div>
                    </div>
                    @*<div class="dropdown-content">
                            <a href="#">Link 1</a>
                            <a href="#">Link 2</a>
                            <a href="#">Link 3</a>
                            <a href="#">Link 4</a>
                            <a href="#">Link 5</a>
                        </div>*@
                </a>
            </div>
            <div class="header search-form">
                <input type="text" name="name" value="" placeholder="Tìm sản phẩm, danh mục hay thương hiệu mong muốn ..." />
                <button class="btn search">
                    <img src="~/Content/src/icon/search_icon.png" alt="Alternate Text" />
                    Tìm kiếm
                </button>
            </div>
            <div class="header user-shortcut">
                <div class="">
                    <a href="" class="account-container">
                        <img src="~/Content/src/icon/user_icon.png" alt="Alternate Text" />
                        <div>
                            <div class="account-lable">Tài Khoản</div>
                            <div class="account-name">User Name</div>
                        </div>
                    </a>
                </div>
                <a href="" class="cart-item">
                    <img src="~/Content/src/icon/cart_icon.png" alt="Alternate Text" />
                    <div class="cart-lable">Giỏ Hàng</div>
                </a>
            </div>
        </div>
    </header>
    <div style="background-color: rgb(239, 239, 239);">
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="container footer-content">
            <div>
                <h4>HỖ TRỢ KHÁCH HÀNG</h4>
                <a href="">Câu hỏi thương gặp</a>
                <a href="">Gửi yêu cầu hỗ trợ</a>
                <a href="">Hướng dẫn đặt hàng</a>
                <a href="">Phương thức vận chuyển</a>
                <a href="">Chính sách đổi trả</a>
                <a href="">Hướng dẫn trả góp</a>
                <a href="">Chính sách hàng nhập khẩu</a>
                <a href="">Hỗ trợ khách hàng: hotro@tiki.vn</a>
                <a href="">Báo lỗi bảo mật: sercurity@tiki.vn</a>
            </div>
            <div>
                <h4>VỀ TIKI</h4>
                <a href="">Giới thiệu về tiki</a>
                <a href="">Tuyển Dụng</a>
                <a href="">Chính sách bảo mật thanh toán</a>
                <a href="">Chính sách bảo mật thông tin cá nhân</a>
                <a href="">Chính sách giải quyết khiếu nại</a>
                <a href="">Điều khoản sử dụng</a>
                <a href="">Giới thiệu Tiki Xu</a>
