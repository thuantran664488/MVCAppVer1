@model IEnumerable<MVCAppVer1.Models.Product>

@{
    ViewBag.Title = "Home Page";
    @*@Styles.Render("~/Content/css/index.css");
        @Styles.Render("~/Content/css")*@
}

@section css{
    <link href="~/Content/_bundle/indexBundle.min.css" rel="stylesheet" />
}

<div class="grid-container">
    @foreach (var product in Model)
    {
        var route = "/product/" + product.metaTitle + "-" + product.Id;
        var img_url = product.url;

        <div class="grid-item">
            <a class="product-item"
               href="@route">
                <img src="@img_url " alt=" " />
                <div class="info">
                    <div class="product-name" id="name">@product.Name</div>
                    <div class="product-price">
                        @string.Format("{0:0,0.000}", product.price) <span style="text-decoration: underline">đ</span>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
@section scripts{
    <script src="~/Content/js/IndexJS.min.js"></script>
}